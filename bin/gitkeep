#!/usr/bin/env ruby

require 'gitkeep'

gitkeep = Gitkeep.new

# set options
gitkeep.dryrun = !ARGV.delete('-d').nil?
gitkeep.interactive = !ARGV.delete('-i').nil?			

if ARGV.size == 0
	# no options, create in current path
	gitkeep.create(".") 
else
	# iterate over paths
	ARGV.each do |arg|
		gitkeep.create(arg) unless arg =~ /^-+/
	end
end
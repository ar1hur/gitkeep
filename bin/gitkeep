#!/usr/bin/env ruby

if !ARGV.delete('-h').nil?
	put 'gitkeep version 0.2.3'
	put 'options:'
	put "-d \t drymode"
	put "-i \t interactive"
	put "-a \t adding .gitkeep files to your git index"
	exit
end

require 'gitkeep'

gitkeep = Gitkeep.new

# set options
gitkeep.dryrun = !ARGV.delete('-d').nil?
gitkeep.interactive = !ARGV.delete('-i').nil?			
if !ARGV.delete('-a').nil?
	gitkeep.search(".")
	exit
end

if ARGV.size == 0
	# no options, create in current path
	gitkeep.create(".") 
else
	# iterate over paths
	ARGV.each do |arg|
		gitkeep.create(arg) unless arg =~ /^-+/
	end
end